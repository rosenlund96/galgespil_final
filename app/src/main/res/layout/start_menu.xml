<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/headerMenu"
            android:text="Galgeshit"
            android:textSize="38dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/secondHeader"
            android:text="Start Menu"
            android:textSize="28dp"
            android:gravity="center"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:id="@+id/startSpilBut"
            android:text="Start nyt spil"
            android:textSize="30dp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:id="@+id/indstillingerBut"
            android:text="Indstillinger"
            android:textSize="30dp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:id="@+id/hjælpBut"
            android:text="Hjælp"
            android:textSize="30dp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp" />

</LinearLayout>